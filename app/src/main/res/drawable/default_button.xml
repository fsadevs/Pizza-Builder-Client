<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#A63D18"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>

            <item
                android:bottom="5px"
                >
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:endColor="@color/color_base2"
                        android:startColor="@color/naranja_base"
                        android:type="linear" />
                    <padding
                        android:left="10dp"
                        android:right="10dp"
                        />
                    <corners android:radius="20dp"/>
                </shape>

            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#A63D18"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>

            <item
                android:top="5px"
                >
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:endColor="@color/naranja_base"
                        android:startColor="@color/naranja_base"
                        android:type="linear" />
                    <padding
                        android:left="10dp"
                        android:right="10dp"
                        />
                    <corners android:radius="20dp"/>
                </shape>

            </item>
        </layer-list>
    </item>
</selector>