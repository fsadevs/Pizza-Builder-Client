<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutAnimation="@anim/layout_anim_server_chat">

    <View
        android:id="@+id/view35"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/message_server_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_corner"
        android:backgroundTint="#FFF59D"
        android:rotation="90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/message_server_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#FFF59D"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:contentPadding="16dp"
        app:layout_constraintEnd_toStartOf="@+id/view35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/message_server_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Content"
            android:textColor="@color/drawer_text" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/message_server_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:text="00:00"
        android:textColor="@color/gray_600"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/message_server_card"
        app:layout_constraintTop_toTopOf="@+id/message_server_card" />


</androidx.constraintlayout.widget.ConstraintLayout>