<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutAnimation="@anim/layout_animation_item_right_in"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/voucher_background"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/voucher_divider"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/main_gradient"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/voucher_barcode"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/voucher_divider"
                app:layout_constraintStart_toStartOf="@+id/voucher_background"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/barcode"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/voucher_importe"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/fjalla_one"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                android:theme="@style/TitleText"
                android:typeface="normal"
                app:layout_constraintEnd_toEndOf="@+id/voucher_barcode"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/voucher_barcode" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="$"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/voucher_importe"
                app:layout_constraintStart_toStartOf="@+id/voucher_barcode"
                app:layout_constraintTop_toTopOf="@+id/voucher_importe"
                tools:ignore="HardcodedText" />

            <View
                android:id="@+id/voucher_divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:background="@color/gray_400"
                app:layout_constraintBottom_toTopOf="@+id/voucher_id"
                app:layout_constraintEnd_toStartOf="@+id/voucher_logo"
                app:layout_constraintStart_toEndOf="@+id/voucher_divider" />

            <TextView
                android:id="@+id/voucher_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:textAlignment="center"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.473"
                app:layout_constraintStart_toEndOf="@+id/voucher_divider" />

            <TextView
                android:id="@+id/voucher_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/gray_600"
                android:textSize="16sp"
                android:theme="@style/TitleText"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/voucher_background"
                app:layout_constraintTop_toTopOf="@+id/voucher_logo" />

            <ImageView
                android:id="@+id/voucher_logo"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_lightmode_small"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>